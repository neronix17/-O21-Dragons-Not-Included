	<ThingDef ParentName="ArmorSmithableBase">
		<defName>O21_DNI_PauldronsGondorian</defName>
		<label>gondorian pauldrons</label>
		<description>Metal pauldrons, decent protection overall.</description>
		<techLevel>Medieval</techLevel>
		<graphicData>
			<texPath>DNI/Apparel/Gondor/Pauldrons</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>4000</WorkToMake>
			<MaxHitPoints>400</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0.3</Flammability>
			<StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<apparel>
			<bodyPartGroups>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Hands</li>
			</bodyPartGroups>
			<wornGraphicPath>DNI/Apparel/Gondor/Pauldrons</wornGraphicPath>
			<layers>
				<li>ShellExtra</li>
			</layers>
			<tags>
				<li>Medieval</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>O21_DNI_MetalArmour</researchPrerequisite>
		</recipeMaker>
	</ThingDef>

