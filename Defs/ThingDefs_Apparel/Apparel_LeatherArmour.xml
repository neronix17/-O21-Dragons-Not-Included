<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ======================================= Leather Armour =======================================-->
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>O21_DNI_LeatherLight</defName>
		<label>pauldrons (light)</label>
		<description>A single leathery pauldron, decent protection overall.</description>
		<techLevel>Medieval</techLevel>
		<graphicData>
			<texPath>Things/Apparel/Armour/Leather/LightLeather</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.3</Flammability>
			<ArmorRating_Sharp>0.65</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
			<ArmorRating_Heat>0.20</ArmorRating_Heat>
			<Insulation_Cold>1</Insulation_Cold>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costList>
			<Steel>10</Steel>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Armour/Leather/LightLeather</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Medieval</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<comps>
			<li Class="O21Toolbox.ApparelRestrict.CompProperties_BodyRestrict">
				<compClass>O21Toolbox.ApparelRestrict.Comp_BodyRestrict</compClass>
				<BodyDefs>
					<li>Male</li>
				</BodyDefs>
			</li>
		</comps>
	</ThingDef>
	
